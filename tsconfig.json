{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "jsx": "preserve",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "allowJs": false,
        "strict": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "experimentalDecorators": true, // 注解
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "declarationMap": false,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types/",
            "./types"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@t/*": [
                "types/*"
            ],
            "@m/*": [
                "mock/*"
            ],
            "@b/*": [
                "build/*"
            ]
        }
    },
    "include": [
        "types/**/*.d.ts",
        "types/**/*.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "mock/**/*.d.ts",
        "mock/**/*.ts",
        "build/**/*.d.ts",
        "build/**/*.ts",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}